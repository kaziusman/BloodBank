<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg">
    <ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"

        android:layout_height="match_parent">


        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:orientation="vertical"

            android:gravity="center"
            android:layout_margin="20dp"
            android:layout_height="match_parent">





            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="#F3F2F2"
                android:layout_margin="10dp"
                android:text="Add Blood">
            </TextView>







            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="8dp">
                <ImageView


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_blood"
                    android:layout_gravity="center"></ImageView>
                <Spinner

                    android:id="@+id/add_blood_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:entries="@array/bloodgroup"

                    android:scrollbarStyle="insideInset"
                    android:background="@android:color/transparent"
                    android:drawablePadding="12dp"
                    android:padding="8dp"
                    android:textColor="#FFFFFF"

                    />
            </LinearLayout>



            <View
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#B3AFAF" />

            <EditText
                android:id="@+id/addblood_bottles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_label_outline_24dp"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Number of Bottles"
                android:inputType="text"
                android:maxLines="1"
                android:padding="8dp"

                android:textColorHint="#FAF6F6"

                />

            <View
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#B3AFAF" />






            <EditText
                android:id="@+id/addblood_donor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_label_outline_24dp"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Dontated By"
                android:inputType="text"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#FFFFFF"

                />
            <View
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#B3AFAF" />





            <EditText
                android:id="@+id/addblood_contactNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_phone_contact"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Contact No. of Donor"
                android:inputType="number"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#FFFFFF"

                />
            <View
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#B3AFAF" />





            <Button
                app:backgroundTint="@null"
                android:id="@+id/add_blood_btn"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_background"
                android:clickable="true"
                android:padding="16dp"
                android:text="Add Blood"
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
