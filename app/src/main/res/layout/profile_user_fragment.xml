<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"

        android:layout_height="match_parent">


        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:orientation="vertical"

            android:gravity="center"
            android:layout_margin="20dp"
            android:layout_height="match_parent">





            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="#B71C1C"
                android:layout_margin="10dp"
                android:text="User Profile">
            </TextView>



            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/up_user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="8dp"

                android:textColorHint="#B3AFAF" />

            <View
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#B3AFAF" />



            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/up_user_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="8dp"

                android:textColorHint="#B3AFAF" />

            <View
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#B3AFAF" />





            <EditText
                android:id="@+id/up_user_FName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_label_outline_24dp"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="First Name"
                android:inputType="text"
                android:maxLines="1"
                android:padding="8dp"

                android:textColorHint="#B3AFAF"

                />

            <View
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#B3AFAF" />

            <EditText
                android:id="@+id/up_user_LName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_label_outline_24dp"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Last Name"
                android:inputType="text"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#B3AFAF"

                />

            <View
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#B3AFAF" />

            <EditText
                android:id="@+id/up_user_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_circular_line_with_word_age_in_the_center"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Age"
                android:inputType="number"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#B3AFAF"

                />

            <View
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#B3AFAF" />



            <EditText
                android:id="@+id/up_user_Gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_gender_symbols"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Gender"
                android:inputType="text"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#B3AFAF"

                />
            <View
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#B3AFAF" />


            <EditText
                android:id="@+id/up_user_city"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_location_city_24dp"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="City"
                android:inputType="text"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#B3AFAF"

                />

            <View
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#B3AFAF" />


            <EditText
                android:id="@+id/up_user_contactNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_phone_contact"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Contact No."
                android:inputType="number"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#B3AFAF"

                />
            <View
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#B3AFAF" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="8dp">
                <ImageView


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_blood"
                    android:layout_gravity="center"></ImageView>
                <Spinner

                    android:id="@+id/up_user_blood_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:entries="@array/bloodgroup"

                    android:scrollbarStyle="insideInset"
                    android:background="@android:color/transparent"
                    android:drawablePadding="12dp"
                    android:padding="8dp"
                    android:textColor="#FFFFFF"

                    />
            </LinearLayout>

            <View
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#B3AFAF" />



            <Button
                app:backgroundTint="@null"
                android:id="@+id/up_btn_user_signup"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_background"
                android:clickable="true"
                android:padding="16dp"
                android:text="Update"
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
